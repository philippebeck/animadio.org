{% extends 'layout/layout.twig' %}

{% block subtitle %}Grid{% endblock %}

{% block description %}Animadio Documentation about Animadio Grid : Grid, Fluid, Flex & Place{% endblock %}

{% block main %}

    <article>
        <h2>Grid</h2>

        <section class="card-purple">
            <figure>
                <i class="fas fa-th fa-7x" aria-hidden="true"></i>
            </figure>
            <h3>Grid Usage</h3>
            <p>To use the Grid feature, you can concatenate each Screen with the desired number of columns after the same Grid keyword.</p>
            <a class="btn" href="https://cdn.jsdelivr.net/npm/animadio@2.4.4/dist/animadio-grid.css" title="Access to Animadio Grid CDN" rel="noreferrer noopener" target="_blank">
                <i class="fas fa-server fa-lg color-white color-blue-into" aria-hidden="true"></i>
            </a>
            <a class="btn" href="https://github.com/animadio/animadio/blob/master/dist/animadio-grid.css" title="View CSS Library @GitHub" rel="noreferrer noopener" target="_blank">
                <i class="fab fa-css3 fa-lg color-white color-blue-into" aria-hidden="true"></i>
            </a>
        </section>

        <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
        <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
        <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">

        <nav class="menu">
            <label for="menu-radio1" title="Show Grid & Fluid Classes">
                Grid
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio2" title="Show Flex Classes">
                Flex
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio3" title="Show Place Classes">
                Place
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
        </nav>

        <section class="menu-relay">
            <h3>Grid Parts</h3>

            {{ include("front/grid/fluid.twig") }}
            {{ include("front/grid/flex.twig") }}
            {{ include("front/grid/place.twig") }}

        </section>
    </article>
{% endblock %}

<nav class="navbar">
    <input 
        id="navbar-close" 
        class="navbar-close" 
        type="radio" 
        name="navbar" 
        checked>
    <input 
        id="navbar-open" 
        class="navbar-open" 
        type="radio" 
        name="navbar">

    <a 
        class="anima-slideB-sm-this" 
        href="./" 
        title="Home">
        <img 
            src="img/logo-nav.png" 
            alt="Logo Animadio"
            width="40"
            height="40">
    </a>

    <ul>
        <li>
            <a 
                href="{{ url('home') }}" 
                title="Back to Home">
                <i class="fa-solid fa-house-signal fa-fw"></i>
                <span>Demo</span>
            </a>
        </li>
        <li>
            <a 
                href="{{ url('start') }}" 
                title="Getting Start">
                <i class="fa-solid fa-play fa-fw"></i>
                <span>Start</span>
            </a>
        </li>
        <li>
            <a 
                href="{{ url('usage') }}" 
                title="Common Usage">

            </a>
        </li>
    </ul>

    <ul>
    {% if (checkUser()) %}
        <li>
            <a  
                href="{{ url('admin') }}" 
                title="{{ getSession('name') }} Admin">
                <img 
                    class="bord-circle" 
                    src="img/user/{{ getSession('image') }}" 
                    alt="{{ getSession('name') }} Picture">
            </a>
        </li>
        <li>
            <a 
                class="onto-color-red" 
                href="{{ url('auth!logout') }}" 
                title="Logout">
                <i class="fa-solid fa-sign-out-alt fa-lg"></i>
            </a>
        </li>

    {% else %}
        <li>
            <a 
                class="onto-color-cyan" 
                href="{{ url('contact') }}" 
                title="Contact">
                <i class="fa-solid fa-at fa-lg fa-fw"></i>

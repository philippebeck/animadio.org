<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta 
        name="viewport" 
        content="width=device-width, initial-scale=1.0">

    <title>{% block title %}{% endblock %}</title>

    <link 
        rel="canonical" 
        href="{% block canonical %}https://animadio.org{% endblock %}">
    <link 
        rel="icon" 
        href="https://animadio.org/public/img/favicon.ico" 
        type="image/x-icon">

    <link 
        rel="preload" 
        href="node_modules/@fortawesome/fontawesome-free/css/all.min.css" 
        as="style">
    <link 
        rel="preload" 
        href="node_modules/animadio/dist/animadio.min.css" 
        as="style">
    <link 
        rel="preload" 
        href="css/style.css" 
        as="style">

    <meta 
        name="description"
        content="{% block description %}{% endblock %}">
    <meta 
        name="author"      
        content="Philippe Beck">

    <meta 
        property="og:type"        
        content="website">
    <meta 
        property="og:title"       
        content="{{ block('title') }}">
    <meta 
        property="og:url"         
        content="{{ block('canonical') }}">
    <meta 
        property="og:description" 
        content="{{ block('description') }}">
    <meta 
        property="og:image"       
        content="{% block image %}https://animadio.org/img/logo.png{% endblock %}">

    <meta 
        name="twitter:card"        
        content="summary">
    <meta 
        name="twitter:title"       
        content="{{ block('title') }}">
    <meta 
        name="twitter:site"        
        content="{{ block('canonical') }}">
    <meta 
        name="twitter:description" 
        content="{{ block('description') }}">
    <meta 
        name="twitter:image"       
        content="{{ block('image') }}">
    <meta 
        name="twitter:creator"     
        content="@ph_beck">

    <link 
        rel="stylesheet" 
        media="all" 
        href="node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link 
        rel="stylesheet" 
        media="all" 
        href="node_modules/animadio/dist/animadio.min.css">
    <link 
        rel="stylesheet" 
        media="all" 
        href="css/style.css">
</head>

<body>
    {{ include('layout/navbar.twig') }}

    <header>
        {% if (checkUser(true)) %}

        <p 
            id="alert" 
            class="bg-{{ getAlert(true) }} color-white align-center">
            {{ getAlert() }}
        </p>

        {% endif %}

        <h1>
            {{ block('title') }}
        </h1>
    </header>

    {% block main %}{% endblock %}

    {{ include('layout/footer.twig') }}

    {% block script %}{% endblock %}
</body>
</html>

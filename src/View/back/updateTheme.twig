{% extends 'layout/layout.twig' %}

{% block title %}Update an Theme{% endblock %}

{% block description %}{% endblock %}

{% block main %}
<main>
    <form 
        class="form" 
        method="post" 
        action={{ url('theme!update', {'id': theme.id}) }} 
        enctype="multipart/form-data">
        <input 
            name="MAX_FILE_SIZE" 
            type="hidden" 
            value="1000000">
        <fieldset>
            <legend>
                <img 
                    class="bord-primary" 
                    src="img/themes/{{ theme.name|lower }}.png" 
                    alt="Screenshot of {{ theme.name }}">
            </legend>
            <ul>
                <li>
                    <label for="name">
                        Name
                    </label>
                    <input 
                        id="name" 
                        name="name" 
                        type="text" 
                        maxlength="20" 
                        value="{{ theme.name }}"
                        required>
                </li>
                <li>
                    <label for="file">
                        Photo.png (max 1Mo)
                    </label>
                    <input 
                        name="file" 
                        type="file" 
                        accept=".png">
                </li>
                <li>
                    <label for="link">
                        Link
                    </label>
                    <input 
                        id="link" 
                        name="link" 
                        type="text" 
                        maxlength="40" 
                        value="https://codepen.io/philippebeck/pen/{{ theme.link }}"
                        required>
                </li>
                <li>
                    <label for="definition">
                        Definition
                    </label>
                    <textarea 
                        id="definition"
                        name="definition"
                        rows="5"
                        required>{{ theme.definition }}</textarea>
                </li>
            </ul>
            <ul>
                <li>
                    <input 
                        type="reset" 
                        value="Reset">
                    <input 
                        type="submit" 
                        value="Update">
                </li>
            </ul>
        </fieldset>
    </form>
    <a 
        class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quit
    </a>
</main>
{% endblock %}

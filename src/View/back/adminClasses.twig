<section class="menu-target1">
    <h2>
        <i class="fa-solid fa-magic"></i> 
        Classes
    </h2>

    <a 
        class="btn-green btn-lg" 
        href="{{ url('class!create') }}">
        New Class
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Class
                </th>
                <th>
                    Naming
                    <hr>
                    Category
                </th>
            </tr>
        </thead>
        <tbody>

        {% for class in classes %}
            <tr>
                <td>
                    .{{ class.name }} 
                    <br>
                    <a 
                        class="btn-blue" 
                        href="{{ url('class!update', {'id': class.id}) }}">
                        <i class="fa-solid fa-pen-square fa-fw"></i>
                    </a>
                    <a 
                        class="btn-red" 
                        href="{{ url('class!delete', {'id': class.id}) }}">
                        <i class="fa-solid fa-times-circle fa-fw"></i>
                    </a>
                </td>
                <td>

                {% if class.media == 1 %}
                    <i class="fa-solid fa-mobile-alt"></i>
                {% endif %}

                {% if class.concat == 1 %}
                    <i class="fa-solid fa-link"></i>
                {% endif %}

                {% if class.state != "no" %}
                    {{ class.state }}
                {% else %}
                    {% if class.media == 0 and class.concat == 0 %}                           
                        {{ class.state }}
                    {% endif %}   
                {% endif %}

                    <hr>
                {{ class.category }}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>

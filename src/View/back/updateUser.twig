{% extends 'layout/layout.twig' %}

{% block title %}Update a User{% endblock %}

{% block description %}{% endblock %}

{% block main %}
<main>
    <form 
        class="form" 
        method="post" 
        action={{ url('user!update', {'id': user.id}) }} 
        enctype="multipart/form-data">
        <input 
            name="MAX_FILE_SIZE" 
            type="hidden" 
            value="1000000">
        <fieldset>
            <legend>
                <img 
                    class="bord-primary" 
                    src="img/user/{{ user.image }}" 
                    alt="Screenshot of {{ user.name }}">
            </legend>
            <ul>
                <li>
                    <label for="name">
                        Name
                    </label>
                    <input 
                        id="name" 
                        name="name" 
                        type="text" 
                        maxlength="50" 
                        value="{{ user.name }}"
                        required>
                </li>
                <li>
                    <label for="file">
                        Photo (max 1Mo)
                    </label>
                    <input 
                        name="file" 
                        type="file" 
                        accept=".jpg, .jpeg, .png, .gif">
                </li>
                <li>
                    <label for="email">
                        Email
                    </label>
                    <input 
                        id="email" 
                        name="email" 
                        type="email" 
                        maxlength="100" 
                        minlength="5" 
                        value="{{ user.email }}"
                        required>
                </li>
                <hr>
                <li>
                    <label for="old-pass">
                        Old Password
                    </label>
                    <input 
                        id="old-pass" 
                        name="old-pass" 
                        type="password" 
                        placeholder="Type your Old Password" 
                        maxlength="100" 
                        minlength="8">
                </li>
                <li>
                    <label for="new-pass">
                        New Password
                    </label>
                    <input 
                        id="new-pass" 
                        name="new-pass" 
                        type="password" 
                        placeholder="Type your New Password" 
                        maxlength="100" 
                        minlength="8">
                </li>
                <li>
                    <label for="conf-pass">
                        Confirm Password
                    </label>
                    <input 
                        id="conf-pass" 
                        name="conf-pass" 
                        type="password" 
                        placeholder="Confirm your New Password" 
                        maxlength="100" 
                        minlength="8">
                </li>
            </ul>
            <ul>
                <li>
                    <input 
                        type="reset" 
                        value="Reset">
                    <input 
                        type="submit" 
                        value="Update">
                </li>
            </ul>
        </fieldset>
    </form>
    <a 
        class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quit
    </a>
</main>
{% endblock %}

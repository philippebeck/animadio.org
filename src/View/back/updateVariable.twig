{% extends 'layout/layout.twig' %}

{% block title %}Update a Variable{% endblock %}

{% block description %}{% endblock %}

{% block main %}
<main>
    <form 
        class="form" 
        method="post" 
        action={{ url('variable!update', {'id': variable.id}) }}>
        <fieldset>
            <legend>
                <i class="fa-solid fa-glass-whiskey fa-2x"></i>
            </legend>
            <ul>
                <li>
                    <label for="name">
                        Name
                    </label>
                    <input 
                        id="name" 
                        name="name" 
                        type="text" 
                        maxlength="20" 
                        value="{{ variable.name }}"
                        required>
                </li>
                <li>
                    <label for="category_id">
                        Category
                    </label>
                    <select 
                        id="category_id" 
                        name="category_id"
                        required>
                        
                        <option value="">
                            -- Select a Category
                        </option>

                    {% for category in categories %}

                        {% if category.id is same as(variable.category_id) %}
                            <option 
                                value="{{ category.id }}" 
                                selected>
                                {{ category.category }} (Registred)
                            </option>

                        {% else %}
                            <option value="{{ category.id }}">
                                {{ category.category }}
                            </option>
                        {% endif %}

                    {% endfor %}

                    </select>
                </li>
            </ul>
            <ul>
                <li>
                    <input 
                        type="reset" 
                        value="Reset">
                    <input 
                        type="submit" 
                        value="Update">
                </li>
            </ul>
        </fieldset>
    </form>
    <a 
        class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quit
    </a>
</main>
{% endblock %}
